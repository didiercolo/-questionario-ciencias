# Save exact version of packages
save-exact = true

# Set package-lock to version 2
package-lock = true
package-lock-only = false

# Disable package-lock.json for workspaces
package-lock = false

# Set the package manager to npm
engine-strict = true

# Set the registry to the default npm registry
registry = "https://registry.npmjs.org/"

# Set the cache directory
cache = "~/.npm"

# Set the log level
loglevel = "warn"

# Set the progress bar
progress = true

# Disable the fund message
fund = false

# Enable audit
audit = true

# Set the audit level to moderate
audit-level = "moderate"
